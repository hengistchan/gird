{
  "name": "@gird-mcp/agent",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "MCP proxy agent server with authentication and deployment management",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc --watch & nodemon --watch dist --exec node dist/index.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hengistchan/gird.git",
    "directory": "apps/agent"
  },
  "bugs": {
    "url": "https://github.com/hengistchan/gird/issues"
  },
  "homepage": "https://github.com/hengistchan/gird#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "proxy",
    "agent",
    "deployment"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@gird-mcp/core": "workspace:*",
    "@prisma/client": "^6.2.1",
    "bcrypt": "^5.1.1",
    "fastify": "^5.3.2",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.17.17",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@prisma/client": "^6.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
